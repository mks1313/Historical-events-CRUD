
 <form action="/events/search" method="GET">
      <input
        id="myInput"
        type="text"
        name="query"
        placeholder="Search events..."
      />
      <button class="link-single" type="submit">Search</button>
    </form>
    {{#if events.length}}
      <h2>Search Results for "{{searchQuery}}"</h2>
      <div class="event-cards-container-archive">
        {{#each events}}
      <div class="event-card-archive">
          <a href="/events/{{_id}}">
            <div
              class="event-card-image-archive"
              style="background-image: url('{{image}}');"
            ></div>
            <div class="event-card-title-archive">
              {{title}}
            </div>
            <div class="event-card-creator-archive">
              Created by:
              {{creator.username}}

            </div>
            <div class="event-card-rating-archive">
              Rating:
              {{averageRating.average}}
              ({{averageRating.count}}
              rates)
            </div>

            <div class="event-card-comments-archive">
              Comments:
              {{this.comments.length}}
            </div>
          </a>
        </div>
        {{/each}}
      </div>
    {{else}}
      <p>No se encontraron resultados para "{{searchQuery}}"</p>
    {{/if}}