<body class="bodyArchive-archive">
  <div class="events-container-archive">
    <div class="event-cards-container-archive">
      {{#each events}}
        <div class="event-card-archive">
          <a href="/events/{{_id}}">
            <div
              class="event-card-image-archive"
              style="background-image: url('{{image}}');"
            ></div>
            <div class="event-card-title-archive">
              <h2>{{title}}</h2>
            </div>
            <div class="event-card-creator-archive">
              Created by: {{creator.username}}
            </div>
            <div class="event-card-rating-archive">
              Rating: {{averageRating.average}} ({{averageRating.count}} rates)
            </div>
            <div class="event-card-comments-archive">
              Comments: {{this.comments.length}}
            </div>
          </a>
        </div>
      {{/each}}
    </div>
<a href="/events/event-archive" class="link-single">Back</a>