<head>
 <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      margin: 0;
      padding: 0;
      height: 100%;
    }

    .background-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url("https://m.media-amazon.com/images/I/714upKLCoNL._AC_SL1500_.jpg");
      background-size: cover;
      opacity: 0.6;
      z-index: -1;
    }
    .navbar {
      background-color: rgba(90, 122, 153, 0.9); 
    }

    .navbar-brand {
      color: #ffffff;
    }
    .nav-link {
      color: black;
    }

    .user-info {
      position: relative; 
      z-index: 1; 
      background-image: url("https://m.media-amazon.com/images/I/714upKLCoNL._AC_SL1500_.jpg");
      color: black;
      border-radius: 8px;
      padding: 20px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .profile-image {
      max-width: 200px;
      height: 200px;
      border-radius: 50%;
    }
  </style>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark">
<div class="background-overlay"></div> 
        <div class="container">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/users/editprofile"> Edit Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/events/event-archive">All Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/events/event-create">Create new Event</a>
                    </li>
                    <li class="nav-item">
                      <form action="/auth/logout" method="POST">
                        <button type="submit" class="btn btn-danger">Logout</button>
                      </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


<div class="container mt-5">
  <div id="user" class="text-center">
    <h1 class="display-4 mb-4">Â¡Welcome, {{ user.username }}!</h1>

    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="user-info" style="border: 10px solid #ccc; border-radius: 15px;">
          <div class="text-center mb-4">
            {{#if user.profileImage}}
              <img src="{{ user.profileImage }}" alt="Profile Image" class="profile-image">
            {{else}}
              <img src="/images/user-default.png" alt="Default Profile Image" class="profile-image">
            {{/if}}
          </div>
          <h5 class="mb-3"><strong>Name:</strong> {{ user.username }}</h5>
          <p class="mb-3"><strong>Email:</strong> {{ user.email }}</p>
          <h5 class="mb-3"><strong>Events created:</strong> {{ eventCount }}</h5>
        </div>
      </div>
    </div>
  </div>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>





